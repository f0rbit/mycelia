{
  "name": "mycelia",
  "version": "0.1.0",
  "description": "A markdown-based engine for creating deeply-linked project websites (digital gardens)",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "bun run build:packages",
    "build:packages": "bun --filter='@mycelia/*' run build",
    "dev": "bun --filter='@mycelia/*' run dev",
    "demo:dev": "cd apps/demo && bun run dev",
    "demo:build": "bun run build:packages && cd apps/demo && bun run build",
    "demo:export": "bun run demo:build",
    "test": "bun test",
    "clean": "bun --filter='@mycelia/*' run clean"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  },
  "author": "Tom",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^4.0.3",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3"
  }
}
