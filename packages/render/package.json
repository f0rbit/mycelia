{
  "name": "@mycelia/render",
  "version": "0.1.0",
  "description": "React and Next.js rendering utilities for Mycelia knowledge graphs",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
